<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UserDashboard">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#fece2f"
            android:padding="20dp">

        <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:src="@drawable/sam"/>

        <TextView
                android:id="@+id/fullname_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profile_image"
                android:fontFamily="@font/bungee"
                android:includeFontPadding="false"
                android:text="Taimoor Sikander"
                android:textColor="#000"
                android:textSize="20sp"/>

        <TextView
                android:id="@+id/username_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fullname_field"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/profile_image"
                android:includeFontPadding="false"
                android:text="User Fullname"
                android:textSize="14sp"/>
        <TextView
                android:id="@+id/phone_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username_field"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profile_image"
                android:includeFontPadding="false"
                android:text="taimoor_sikander"
                android:textColor="@color/black"
                android:textSize="14sp"/>
        <TextView
                android:id="@+id/email_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_field"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profile_image"
                android:includeFontPadding="false"
                android:text="taimoor_sikander"
                android:textSize="14sp"/>

    </RelativeLayout>

        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:paddingBottom="5dp">

            <com.google.android.material.card.MaterialCardView
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    app:cardBackgroundColor="#fece2f"
                    app:cardElevation="10dp">

                <RelativeLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:padding="5dp">

                    <!--                    <ImageView-->
                    <!--                            android:layout_centerHorizontal="true"-->
                    <!--                            android:layout_height="30dp"-->
                    <!--                            android:layout_width="30dp"-->
                    <!--                            android:src=""/>-->

                    <TextView
                            android:fontFamily="@font/bungee"
                            android:id="@+id/delivery_label"
                            android:includeFontPadding="false"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="5 Items"
                            android:textSize="20sp"/>

                    <TextView
                            android:id="@+id/payment_desc"
                            android:includeFontPadding="false"
                            android:layout_below="@id/delivery_label"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Delieverd"
                            android:textSize="20sp"/>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    app:cardBackgroundColor="#fece2f"
                    app:cardElevation="10dp">

                <RelativeLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:padding="5dp">

                    <!--                    <ImageView-->
                    <!--                            android:layout_centerHorizontal="true"-->
                    <!--                            android:layout_height="30dp"-->
                    <!--                            android:layout_width="30dp"-->
                    <!--                            android:src=""/>-->

                    <TextView
                            android:fontFamily="@font/bungee"
                            android:id="@+id/itemInProgress"
                            android:includeFontPadding="false"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="10 Items"
                            android:textSize="20sp"/>

                    <TextView
                            android:id="@+id/payment_desc2"
                            android:includeFontPadding="false"
                            android:layout_below="@id/itemInProgress"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="In Progress"
                            android:textSize="20sp"/>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:orientation="vertical"
                  android:layout_marginHorizontal="10dp"
                  android:layout_marginBottom="20dp">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:layout_margin="20px"
                  android:text="Book items for pick up and delivery"
                  android:fontFamily="@font/bungee"
                  android:textColor="@color/black"
                  android:layout_marginTop="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Item_name"
                android:hint="Item name and description "
                android:transitionName="Itemname_tran"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_destination"
                android:hint="Item destination"
                android:transitionName="destination_tran"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/receiver_name"
                android:hint="Receiver name"
                android:transitionName="receiver_tran"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/receiver_tel"
                android:hint="Receiver Contact"
                android:transitionName="email_tran"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000"
                android:textColor="#fff"
                android:textStyle="bold"
                android:elevation="0dp"
                android:layout_marginTop="10dp"
                android:transitionName="login_tran"
                android:id="@+id/login_btn"
                android:text="Book Item"/>
    </LinearLayout>

    </LinearLayout>

</ScrollView>