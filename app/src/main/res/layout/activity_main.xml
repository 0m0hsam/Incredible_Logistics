<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#fece2f"
>

    <TextView
            android:text="Incredible Logistic's"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="40sp" android:fontFamily="@font/bangers"
            android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="323dp"/>
    <TextView
            android:text="Moving things faster..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="20dp"
            android:textSize="30sp" android:textStyle="bold" android:fontFamily="@font/italianno"/>

</androidx.constraintlayout.widget.ConstraintLayout>